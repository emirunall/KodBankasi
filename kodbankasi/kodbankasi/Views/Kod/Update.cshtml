@{
}
<div class="container-fluid">
    <!-- Basic Card Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kod Güncelle</h6>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="id"/>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Kategori</label>
                    @Html.DropDownListFor(model => model.kategoriId,
                    ViewBag.kategoriView as SelectList,
                    "-- Lütfen Kategorinizi Seçiniz --",
                    new { @class = "form-control ",
                    @id = "kategori",
                    @placeholder = "Kategorinizi Seçiniz",
                    required = "required"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Kod Başlığı</label>
                    <input type="text" asp-for="name" class="form-control" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Kod</label>
                    <textarea class="form-control" asp-for="description" id="exampleTextarea" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>